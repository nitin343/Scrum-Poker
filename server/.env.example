# Server Configuration
PORT=3001
NODE_ENV=development
ALLOWED_ORIGIN=http://localhost:5173

# MongoDB Atlas Connection
# Get this from: MongoDB Atlas > Database > Connect > Drivers
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# JWT Authentication
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=<generate-random-256-bit-key>
JWT_EXPIRES_IN=7d

# Jira Integration
Jira_HOST=your-domain.atlassian.net
Jira_API_TOKEN=your-api-token
Jira_USERNAME=your-email@example.com
Jira_PROTOCOL=https
Jira_API_VERSION=2

# Jira Integration (Siemens)
JIRA_PROTOCOL=https
JIRA_HOST=agileworld.siemens.cloud
JIRA_BASE=/jira
JIRA_USERNAME=<api-username>
JIRA_API_TOKEN=<your-api-token>
JIRA_API_VERSION=2
JIRA_CUSTOM_HEADER=<x-cloud-operations-api-value>

# Encryption Key (for encrypting sensitive stored data)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=<generate-random-256-bit-key>
